<div class="index-container">

  <div class="row">
    <div class="col-sm-12 col-md-7">
      <% @gardens.each do |garden| %>
        <%= link_to(garden_path(garden.id), class: "card") do %>
          <div class="card-product">
            <%= cl_image_tag garden.photo, height: 600, width: 400, crop: :fill unless garden.photo.blank? %>
            <div class="card-product-infos">
              <h2><strong><%= garden.name %></strong></h2>
              <p>Type of land available: <%= garden.category %></p>
              <p>Size: <%= garden.size %></p>
            </div>
          </div>
        <% end %>
        <br>
      <% end %>
    </div>

    <div class="col-sm-12 col-md-5">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>


