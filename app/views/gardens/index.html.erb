<div class="container">
  <div class="row"
    <div class="col-sm-12 col-md-7">
      <div class="search-show-header">
        <h3 class="browse-header"><strong>Search Results</strong></h3>
      </div>
      <div class="cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @garden.photo, height: 300, width: 400, crop: :fill unless @garden.photo.blank? %>');">;
        <% @gardens.each do |garden| %>
            <h2><%= link_to garden.name, garden_path(garden.id) %></h2>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-12 col-md-1">
    </div>

    <div class="map">
      <div class="col-sm-12 col-md-4">
        <!-- placeholder map -->
      </div>
    </div>

  </div>
</div>
