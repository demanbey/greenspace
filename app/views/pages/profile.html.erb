<div>

  <div>
    <h1><%= current_user.first_name %> <%= current_user.last_name %> </h>
  </div>
  <div>
    <p><%= current_user.email %></p>
  </div>
  <div>

  <%= current_user.photo unless current_user.photo.nil? %>
  <%= link_to "Edit profile", edit_user_registration_path(current_user) %>
  </div>
  <div class='card-container'>
    <% current_user.gardens.each do |garden| %>
      <% if garden.user_id == current_user.id %>
        <div class="card-profile">
        <div class="card-profile-infos">
          <%= cl_image_tag garden.photo %>
          <h2> <%= garden.name %> </h2>
          <p> <%= truncate(garden.description, length: 100) %></p>
          <%= link_to "check it out!", garden_path(garden), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

