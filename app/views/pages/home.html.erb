<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1553481839-a18af44d1355?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80);">
  <div class="container">
    <h1><strong>GreenSpace</strong></h1>
    <br>
    <h1 class="ml12">Share land with your community <br>Find a garden to contribute</h1>
    <br>
    <br>
     <!--  search criteria -->
    <div class="search-bar">
      <div class="col-md-6 no-padding">
        <%= form_tag gardens_path, method: :get do %>
        <%= text_field_tag :city,
          params[:city],
          class: "form-control",
          placeholder: "What city are you in?"
        %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="garden-list">
  <div class="garden-header">
    <h3 class="browse-header"><strong>Browse featured gardens</strong></h3>
    <p>Montreal, Quebec</p>
  </div>
  <div class="cards">
    <% @gardens.each do |garden| %>
      <%= link_to(garden_path(garden.id), class: "card") do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url('<%= cl_image_path garden.photo, width: 400, height: 300, crop: :fill unless garden.photo.blank? %>');">
          <h4 class="text-center"><%= garden.name %></h4>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

